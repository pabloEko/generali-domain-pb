{
    "name": "generali-domain-pb",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "private": true,
    "scripts": {
        "get-name": "echo $npm_package_name",
        "get-version": "echo $npm_package_version",
        "start": "webpack --watch",
        "build:swagger": "ts-node ./tools/swagger-generator.ts",
        "build:layer": "mkdir -p ./dist/layer/nodejs && cp package.json ./dist/layer/nodejs && cp package-lock.json ./dist/layer/nodejs && cd ./dist/layer/nodejs && npm ci --target_arch=x64 --target_platform=linux --only=production",
        "build": "NODE_ENV=${NODE_ENV:-production} webpack",
        "clean": "rm -rf -v dist/*",
        "lint": "eslint --ext .js,.ts .",
        "test": "DISABLE_XRAY=true jest",
        "pretest": "npm run lint"
    },
    "license": "ISC",
    "dependencies": {
        "@ekonoo/backend-common": "^4.5.4",
        "@ekonoo/computation": "^1.6.0",
        "@ekonoo/ekonoo-management-lib": "^2.0.0",
        "@ekonoo/lambdi": "^2.9.0",
        "@ekonoo/models": "^1.7.0",
        "aws-sdk": "^2.998.0",
        "dayjs": "^1.10.6",
        "sqlstring": "^2.3.2",
        "ramda": "^0.27.0",
        "tslib": "^2.0.0"
    },
    "devDependencies": {
        "@ekonoo/ekonoo-testing": "^1.6.4",
        "@ekonoo/eslint-config-backend": "^2.0.0",
        "@types/aws-lambda": "^8.10.55",
        "@types/jest": "25.2.2",
        "@types/node": "14.0.1",
        "@types/ramda": "^0.27.6",
        "@types/sqlstring": "^2.3.0",
        "glob": "^7.1.6",
        "husky": "^4.2.5",
        "jest": "26.0.1",
        "lint-staged": "^10.5.2",
        "raw-loader": "^4.0.2",
        "ts-jest": "26.0.0",
        "ts-loader": "7.0.4",
        "typescript": "3.9.2",
        "webpack": "4.43.0",
        "webpack-cli": "3.3.11",
        "webpack-inject-plugin": "^1.5.5",
        "webpack-node-externals": "^1.7.2",
        "yaml-cfn": "0.2.3"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "overrides": [
            {
                "files": "*.yml",
                "options": {
                    "singleQuote": false,
                    "tabWidth": 2
                }
            }
        ]
    }
}
