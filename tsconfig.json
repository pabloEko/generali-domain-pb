{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "lib": ["es2017"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "types": ["jest", "node"],
        "sourceMap": true
    },
    "include": ["src/**/*"]
}
